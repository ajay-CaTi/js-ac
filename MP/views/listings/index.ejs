<% layout('/layouts/boilerplate') %>
<body>
  <h1>Listings</h1>
  <!-- <form method="get" action="/listing/new">
    <button type="submit">Add New Listing</button>
  </form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for (const listing of listings) {%>
    <a href="/listings/<%=listing.id%>" class="listing-links">
      <div class="card">
        <img
          src="<%=listing.image%>"
          class="card-img-top"
          alt="<%=listing.title%>"
          style="height: 20rem"
        />
        <div class="card-img-overlay">abc</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <div>
    <ul>
      <%for (const listing of listings) {%>
      <li><a href="listings/<%=listing._id%>"><%= listing.title %></a></li>

      <% } %>
    </ul>
  </div>
</body>
