<% layout('/layouts/boilerplate') %>
<body>
  <div>
    <div class="row">
      <div class="col-8">
        <h3><%= listing.title %></h3>
      </div>
    </div>

    <div class="card col-6 offset-2 show-card listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="<%= listing.title %>"
      />
      <div class="card-body">
        
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </div>

      <div class="btns">

        <a class="btn btn-dark ad-btn" href="/listing/<%=listing._id%>/edit">Edit</a>
        <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark ms-2" type="submit">Delete</button>
      </div>

      </form>
    </div>

<div  class="card col-6 offset-2 listing-card">
      <hr>
      <h4>Leave review</h4>
      <form method="POST" novalidate action="/listing/<%=listing._id%>/reviews" class="mb-3 needs-validation">
        <div>
          <label class="form-label" for="rating"> Rating </label>
          <input 
          class="form-range"
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div>
          <label for="comment"  class="form-label"> Comments </label>
          <textarea
          class="form-control"
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter review here.</div>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <br>
        <button class="btn btn-outline-primary
        " type="submit">Submit</button>
        
      </form>
    </div>
<hr>
<h4>All Reviews</h4>

<div class="row">
  <% for (const review of listing.reviews) { %>
  <div class="card col-5 ms-3 mb-5">
    <div class="card-body">
      <h5 class="card-title">mera naame</h5>
      <p class="card-text"><%=review.comment%></p>
      <p class="card-text"><%=review.rating%> Stars</p>
    </div>
    <form method="POST" action="/listing/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="needs-validation mb-2" novalidate>
      <button class="btn btn-sm btn-dark" type="submit">Delete</button>
    </form>
  </div>
<% } %>
</div>
  </div>
</body>
