<% layout('/layouts/boilerplate') %>
<body>
  <div>
    <div class="row">
      <div class="col-8">
        <h3>Listing details</h3>
      </div>
    </div>

    <div class="card col-6 offset-2">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="<%= listing.title %>"
      />
      <div class="card-body">
        <p class="card-text"><b><%= listing.title %></b></p>
        <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </div>

      <div class="btns">

        <a class="btn btn-dark ad-btn" href="/listing/<%=listing._id%>/edit">Edit</a>
        <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark ms-2" type="submit">Delete</button>
      </div>

      </form>
    </div>
  </div>
</body>
